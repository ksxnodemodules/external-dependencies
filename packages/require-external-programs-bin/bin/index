#! /usr/bin/env node
const process = require('process')
const { examine } = require('require-external-programs-utils')

examine(process.cwd()).then(
  message => {
    if (!message) return process.exit(0)
    console.error(message)
    process.exit(1)
  },
  error => {
    console.error(error)
    process.exit(-1)
  }
)
